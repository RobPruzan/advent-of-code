{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"]
  },
  "include": ["**/*"], // Include all files in the src folder
  "exclude": ["node_modules"] // Exclude the node_modules folder
}
